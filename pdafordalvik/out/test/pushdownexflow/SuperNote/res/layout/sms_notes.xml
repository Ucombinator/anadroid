    <EditText android:id="@id/txtPhoneNo" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Message" />
    <EditText android:gravity="top" android:id="@id/txtMessage" android:layout_width="fill_parent" android:layout_height="150.0px" />
    <Button android:id="@id/btnSendSMS" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Send SMS" />
