<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/preferences_checkbox_gradient_top" android:endColor="@color/preferences_checkbox_gradient_bottom" android:angle="270.0" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item android:left="0.5dip" android:top="0.5dip" android:right="0.5dip" android:bottom="0.5dip">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/preferences_checkbox_gradient_inner_shadow" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/preferences_checkbox_gradient_stroke" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item android:left="1.0dip" android:top="-1.0dip" android:right="-5.0dip" android:bottom="2.0dip">
        <bitmap android:gravity="center" android:src="@drawable/check_icon" />
    </item>
</layer-list>
