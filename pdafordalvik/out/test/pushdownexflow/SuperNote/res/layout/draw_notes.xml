<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:id="@id/topLayout" android:layout_width="wrap_content" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <Spinner android:id="@id/paint_color" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <EditText android:id="@id/drawFileName" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="myDrawing.jpg" android:hint="File name." android:singleLine="true">
            <requestFocus />
        </EditText>
        <Button android:id="@id/saveDrawing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save" />
        <Button android:id="@id/sendSms" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SMS" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/drawLayout" android:layout_width="fill_parent" android:layout_height="fill_parent"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <view android:id="@id/viewDrawing" android:layout_width="fill_parent" android:layout_height="fill_parent" class="com.tdizz.snote.drawnotes.DrawView" />
    </LinearLayout>
</LinearLayout>
