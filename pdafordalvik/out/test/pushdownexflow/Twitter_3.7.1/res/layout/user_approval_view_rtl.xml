<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/user_container" android:paddingRight="@dimen/card_inset" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <FrameLayout android:id="@id/action_button_deny_frame" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/action_button_accept_frame" android:layout_centerVertical="true">
            <ImageButton android:id="@id/action_button_deny" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/mini_user_image_size" style="@style/Button" />
        </FrameLayout>
        <FrameLayout android:id="@id/action_button_accept_frame" android:padding="@dimen/list_row_padding" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <ImageButton android:id="@id/action_button_accept" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/mini_user_image_size" style="@style/Button" />
        </FrameLayout>
        <FrameLayout android:id="@id/action_button_frame" android:padding="@dimen/list_row_padding" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <ImageButton android:id="@id/action_button" style="@style/ActionButton" />
        </FrameLayout>
        <include layout="@layout/user_info" />
    </RelativeLayout>
    <include layout="@layout/user_promoted_info" />
</merge>
