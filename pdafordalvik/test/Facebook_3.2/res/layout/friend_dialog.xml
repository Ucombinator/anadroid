<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/ui_flyout_body_bg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:timeline="http://schemas.android.com/apk/res-auto/com.facebook.timeline.ui">
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="2.0dip" android:overScrollMode="never">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:color="@color/timeline_dialog_background">
            <LinearLayout style="@style/friend_menu_item_group">
                <com.facebook.timeline.header.menus.TimelineFriendMenuItem android:id="@id/get_notifications" timeline:text="@string/timeline_get_notifications" style="@style/friend_menu_item" />
            </LinearLayout>
            <LinearLayout android:id="@id/friend_list_short_list" style="@style/friend_menu_item_group" />
            <LinearLayout android:id="@id/friend_list_list" style="@style/friend_menu_item_group">
                <com.facebook.timeline.header.menus.TimelineFriendMenuItem android:id="@id/menu_item_show_more_friend_lists" timeline:text="@string/timeline_show_more_friend_lists" style="@style/friend_menu_item" />
            </LinearLayout>
            <LinearLayout android:id="@id/show_in_news_feed_group" style="@style/friend_menu_item_group">
                <com.facebook.timeline.header.menus.TimelineFriendMenuItem android:id="@id/menu_item_show_in_news_feed" timeline:text="@string/timeline_show_in_news_feed" timeline:checked="true" style="@style/friend_menu_item" />
            </LinearLayout>
            <Button android:id="@id/menu_item_button" style="@style/friend_menu_item_button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
