<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/profile_header_root" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:twitter="http://schemas.android.com/apk/res/com.twitter.android">
    <com.twitter.android.widget.ProfileHeader android:orientation="vertical" android:id="@id/profile_header" android:layout_width="fill_parent" android:layout_height="fill_parent" twitter:overlayDrawable="@drawable/bg_profile_gradient" twitter:filterMaxOpacity="0.6" twitter:filterColor="@color/solid_black">
        <include layout="@layout/user_profile_header" />
    </com.twitter.android.widget.ProfileHeader>
    <RelativeLayout android:background="@color/solid_white" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@id/stats_container" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <include android:id="@id/stats" layout="@layout/stats_row" />
            <View android:background="@drawable/list_rule" android:layout_width="fill_parent" android:layout_height="@dimen/divider_thickness" />
        </LinearLayout>
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/stats_container">
            <com.twitter.android.widget.TwitterRelativeLayout android:id="@id/button_bar" android:background="@null" android:padding="@dimen/list_row_padding" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageButton android:id="@id/button_bar_more" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_profile_action" android:layout_alignParentLeft="true" style="@style/Button.Btn" />
                <com.twitter.android.widget.ShadowTextView android:gravity="center_vertical" android:id="@id/button_bar_action" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawablePadding="@dimen/icon_spacing" android:layout_alignParentRight="true" style="@style/Button.Btn.Follow" />
                <ImageButton android:id="@id/button_messages" android:visibility="gone" android:layout_width="wrap_content" android:src="@drawable/ic_profile_messages" android:layout_alignParentRight="true" style="@style/Button.Btn.Profile" />
                <ImageButton android:id="@id/button_settings" android:visibility="gone" android:layout_marginRight="@dimen/profile_button_margin" android:src="@drawable/ic_profile_settings" android:layout_alignParentLeft="true" style="@style/Button.Btn.Profile" />
                <ImageButton android:id="@id/button_switch_accounts" android:visibility="gone" android:src="@drawable/ic_profile_switch_accounts" android:layout_toRightOf="@id/button_settings" style="@style/Button.Btn.Profile" />
            </com.twitter.android.widget.TwitterRelativeLayout>
            <ProgressBar android:layout_gravity="center" android:id="@id/loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" style="?android:attr/progressBarStyleSmall" />
        </FrameLayout>
        <View android:background="@color/card_stroke" android:layout_width="fill_parent" android:layout_height="@dimen/divider_thickness" android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>
