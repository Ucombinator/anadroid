<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="0.15" style="@style/station_board_time_holder">
        <TextView android:id="@id/txtLSB_ScheduledTime" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/station_board_scheduled_time" />
        <TextView android:id="@id/txtLSB_AdjustedTime" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/station_board_adjusted_time" />
    </LinearLayout>
    <LinearLayout android:gravity="left" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="0.2">
        <app.view.StationBoardDiagramView android:id="@id/station_board_details_leg" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/layoutLSB_StationHolder" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="0.65">
        <TextView android:id="@id/txtLSB_StationName" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/station_board_station_name" />
        <TextView android:id="@id/txtLSB_StatusCaption" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/station_board_details_status_caption" />
        <TextView android:id="@id/txtLSB_SplitMergeStationName" android:visibility="gone" style="@style/station_board_splitmarge_station_name" />
    </LinearLayout>
</LinearLayout>
