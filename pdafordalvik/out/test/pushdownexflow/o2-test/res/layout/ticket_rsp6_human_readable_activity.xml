<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/title_container" layout="@layout/actionbar_with_home_barcode_layout" />
    <ScrollView android:id="@id/layout_home_root" android:layout_below="@id/title_container" style="@style/scrollview_container">
        <LinearLayout style="@style/field_group_layout_container_with_padding">
            <Button android:id="@id/btnViewBarcode" android:layout_width="fill_parent" android:text="@string/NOODLES_TEXT_BARCODE_TICKET_VIEW_BARCODE" style="@style/ActionButton" />
            <Button android:id="@id/btnActivateMTicket" android:layout_width="fill_parent" android:text="@string/NOODLES_TEXT_TICKET_ACTIVATE_BUTTON" style="@style/ActionButtonActivateBarcode" />
            <LinearLayout android:id="@id/layoutCCSTContainer" android:layout_marginTop="10.0dip" style="@style/eticket_container">
                <TextView android:id="@id/ccstTopBorder" style="@style/ccst_ticket_top" />
                <LinearLayout android:id="@id/layoutBarcodeContent" style="@style/ccst_content_container">
                    <RelativeLayout android:id="@id/tricolorRelativeLayout" style="@style/ccst_tricolor_container">
                        <LinearLayout android:id="@id/layoutBarcodeTriColor" style="@style/ccst_tricolor_background">
                            <ImageView android:id="@id/imgBarcodeColor1" style="@style/ccst_tricolor_color1" />
                            <ImageView android:id="@id/imgBarcodeColor2" style="@style/ccst_tricolor_color2" />
                            <ImageView android:id="@id/imgBarcodeColor3" style="@style/ccst_tricolor_color3" />
                        </LinearLayout>
                        <TextView android:id="@id/txtBarcodeTicketStatus" style="@style/ccst_tricolor_ticket_status" />
                        <TextView android:id="@id/txtBarcodeTicketDateWhenActivated" style="@style/Barcode_time_animation" />
                    </RelativeLayout>
                    <TextView android:id="@id/txtFareName" style="@style/BarcodeTicketDetails" />
                    <TextView android:id="@id/txtDirection" android:drawablePadding="@dimen/drawable_padding" style="@style/BarcodeTicketDetails" />
                    <TextView android:id="@id/txtTicketFeature" style="@style/BarcodeTicketDetails" />
                    <TextView android:id="@id/txtRailCard" style="@style/BarcodeTicketDetails" />
                    <LinearLayout style="@style/field_group_layout_container">
                        <TextView android:id="@id/txtFromStation" style="@style/BarcodeTicketDetails" />
                        <TextView android:id="@id/txtToStation" android:drawableLeft="@drawable/arrow_fromto" android:drawablePadding="@dimen/drawable_padding" style="@style/BarcodeTicketDetails" />
                    </LinearLayout>
                    <TextView android:id="@id/txtRouteValidityText" style="@style/BarcodeTicketDetails" />
                    <TextView android:id="@id/txtStartDate" style="@style/BarcodeTicketDetails" />
                    <TextView android:id="@id/txtExpireDate" style="@style/BarcodeTicketDetails" />
                    <TextView android:id="@id/txtDepartureTime" style="@style/BarcodeTicketDetails" />
                    <TextView android:id="@id/txtPrice" style="@style/BarcodeTicketDetails" />
                </LinearLayout>
                <TextView android:id="@id/ccstBottomBorder" style="@style/ccst_ticket_bottom" />
            </LinearLayout>
            <LinearLayout android:id="@id/layoutTicketIdentityInfo" style="@style/ticket_details_container">
                <TextView android:id="@id/titleDetails" android:text="@string/NOODLES_TEXT_ETICKET_DETAILS_TITLE" style="@style/ccst_ticket_detail_top" />
                <LinearLayout style="@style/ticket_container">
                    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="1">
                        <TableRow>
                            <TextView android:id="@id/txtTicketNumberLabel" android:text="@string/NOODLES_TEXT_ETICKET_NUMBER_CAPTION" style="@style/BarcodeHeaderText" />
                            <TextView android:id="@id/txtTicketNumber" style="@style/field_item_label_small_text" />
                        </TableRow>
                        <TableRow android:id="@id/passegerIDRow" android:visibility="gone">
                            <TextView android:id="@id/txtTicketPassegerIdLabel" android:text="@string/NOODLES_TEXT_ETICKET_PASSENGER_ID_CAPTION" style="@style/BarcodeHeaderText" />
                            <TextView android:id="@id/txtTicketPassegerId" style="@style/field_item_label_small_text" />
                        </TableRow>
                        <TableRow android:id="@id/purchaseRefRow" android:visibility="gone">
                            <TextView android:id="@id/txtTicketPurchaseRefLabel" android:text="@string/NOODLES_TEXT_BARCODE_PURCHASE_REFERENCE_CAPTION" style="@style/BarcodeHeaderText" />
                            <TextView android:id="@id/txtTicketPurchaseRef" style="@style/field_item_label_small_text" />
                        </TableRow>
                        <TableRow>
                            <TextView android:id="@id/txtPassengerNameLabel" android:text="@string/NOODLES_TEXT_ETICKET_PASSENGER_NAME_CAPTION" style="@style/BarcodeHeaderText" />
                            <TextView android:id="@id/txtPassengerName" style="@style/field_item_label_small_text" />
                        </TableRow>
                        <TableRow>
                            <TextView android:id="@id/txtPurchasedLabel" android:text="@string/NOODLES_TEXT_BARCODE_PURCHASE_DATETIME_CAPTION" style="@style/BarcodeHeaderText" />
                            <TextView android:id="@id/txtPurchased" style="@style/field_item_label_small_text" />
                        </TableRow>
                        <TableRow android:id="@id/activatedRow" android:visibility="gone">
                            <TextView android:id="@id/txtActivatedLabel" android:text="@string/NOODLES_TEXT_BARCODE_ACTIVATION_DATETIME_CAPTION" style="@style/BarcodeHeaderText" />
                            <TextView android:id="@id/txtActivated" style="@style/field_item_label_small_text" />
                        </TableRow>
                        <TableRow>
                            <TextView android:text="@string/NOODLES_TEXT_BARCODE_DEVICE_DATE_TIME_CAPTION" style="@style/BarcodeHeaderText" />
                            <TextView android:id="@id/txtPhoneDateTime" style="@style/field_item_label_small_text" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <ImageView style="@style/ccst_ticket_detail_bottom" />
            </LinearLayout>
            <LinearLayout android:id="@id/layoutTicketViewOutboundInfo" style="@style/ticket_details_container">
                <TextView android:text="@string/NOODLES_TEXT_ETICKET_RESTRICTION_TITLE" style="@style/ccst_ticket_detail_top" />
                <LinearLayout style="@style/ticket_container">
                    <TextView android:id="@id/txtOutboundJourneyCaption" style="@style/field_item_label" />
                    <app.view.JourneyLegsView android:id="@id/ticketOutboundJourneyLegs" android:visibility="gone" style="@style/field_group_layout_container" />
                    <Button android:id="@id/journeyManagerButton" android:text="@string/NOODLES_TEXT_JOURNEY_MANAGER_BARCODE_JOURNEY_BUTTON" style="@style/DeleteButton" />
                    <TextView android:id="@id/txtRestrictionText" style="@style/field_item_label" />
                </LinearLayout>
                <ImageView style="@style/ccst_ticket_detail_bottom" />
            </LinearLayout>
            <Button android:id="@id/deleteTicketButton" android:text="@string/NOODLES_TEXT_WALLET_DELETE_BUTTON" style="@style/DeleteButton" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
