<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/information_gallery_block_background"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/txtBlockTitle" android:text="@string/NOODLES_TEXT_MAINMENU_INFO" style="@style/common_home_screen_gridview_title" />
    <LinearLayout android:id="@id/info_menu" style="@style/field_group_layout_container" />
    <TableLayout android:background="@drawable/rounded_border" android:padding="6.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="10.0dip">
        <TextView android:textStyle="bold" android:layout_height="wrap_content" android:text="@string/NOODLES_TEXT_DOWNLOAD_ID_CAPTION" />
        <TextView android:id="@id/downloadId" android:layout_height="wrap_content" />
        <TextView android:textStyle="bold" android:layout_height="wrap_content" android:text="@string/NOODLES_TEXT_APP_VERSION_PREFIX" />
        <TextView android:id="@id/versionInfo" android:layout_height="wrap_content" />
        <TextView android:textStyle="bold" android:id="@id/routingIdLabel" android:visibility="gone" android:layout_height="wrap_content" android:text="@string/NOODLES_TEXT_ROUTING_ID_CAPTION" />
        <TextView android:id="@id/routingId" android:visibility="gone" android:layout_height="wrap_content" />
        <TextView android:textStyle="bold" android:id="@id/appStageLabel" android:visibility="gone" android:layout_height="wrap_content" android:text="@string/NOODLES_TEXT_BUILD_NAME_CAPTION" />
        <TextView android:id="@id/appStage" android:visibility="gone" android:layout_height="wrap_content" />
    </TableLayout>
    <TextView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/NOODLES_TEXT_COPYRIGHT" />
</LinearLayout>
