<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/bg_list</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:horizontalScrollViewStyle">@style/HorizontalScrollView</item>
        <item name="refreshableListViewStyle">@style/List.Refreshable</item>
        <item name="tweetViewStyle">@style/TweetView</item>
        <item name="cardRowViewStyle">@style/CardRowView</item>
        <item name="popupEditTextStyle">@style/PopupEditText</item>
        <item name="shadowTextViewStyle">@android:style/Widget.TextView</item>
        <item name="notchViewStyle">@style/NotchView</item>
        <item name="segmentedControlStyle">@style/SegmentedControl</item>
        <item name="navbarStyle">@style/Navbar</item>
        <item name="tweetStatViewStyle">@style/TweetStatView</item>
    </style>
    <style name="Theme.Fullscreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
    <style name="Theme.Dark" parent="@android:style/Theme.Holo" />
    <style name="Theme.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowTitleStyle">@android:style/TextAppearance.Large</item>
    </style>
    <style name="ComposeTheme" parent="@style/HoneycombComposeTheme" />
