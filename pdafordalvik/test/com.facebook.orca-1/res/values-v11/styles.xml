<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OrcaDialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@drawable/orca_panel_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="Theme.Orca" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@style/Theme.Orca.ListView</item>
    </style>
    <style name="Theme.Orca.Preferences" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:listViewStyle">@style/Theme.Orca.ListView</item>
    </style>
    <style name="Theme.Orca.ClickableRow" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@drawable/orca_item_background_holo_light</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Theme.FacebookDark" parent="@android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Sherlock.__Theme" parent="@android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Sherlock.__Theme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Orca.ListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/orca_list_selector_holo_light</item>
    </style>
</resources>
