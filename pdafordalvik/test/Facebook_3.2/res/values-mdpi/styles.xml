<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="adc_app_name_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="adc_app_category_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/app_description_grey</item>
    </style>
    <style name="adc_install_button_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/adc_workflow_button_white</item>
    </style>
    <style name="app_center_rating" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">15.0dip</item>
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">15.0dip</item>
    </style>
    <style name="category_filter">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appcenter_bar_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="appcenter_browse_list_item_title">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_name_black</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="appcenter_browse_list_item_text">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/app_description_grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
    </style>
    <style name="VoipIncallTextShadow">
        <item name="android:shadowColor">#cc000000</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
</resources>
