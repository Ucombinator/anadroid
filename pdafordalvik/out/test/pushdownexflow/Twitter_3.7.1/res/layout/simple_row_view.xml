<?xml version="1.0" encoding="utf-8"?>
<com.twitter.android.widget.CardRowView android:layout_width="fill_parent" android:layout_height="wrap_content" twitter:single="true"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:twitter="http://schemas.android.com/apk/res/com.twitter.android">
    <RelativeLayout style="@style/ListRow">
        <ImageView android:id="@id/chevron" style="@style/Chevron" />
        <ImageView android:id="@id/icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@id/chevron" />
        <TextView android:id="@id/count" android:layout_toLeftOf="@id/chevron" style="@style/SimpleRowViewCount" />
        <TextView android:id="@id/title" android:layout_toRightOf="@id/icon" style="@style/SimpleRowViewTitle" />
    </RelativeLayout>
</com.twitter.android.widget.CardRowView>
