<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="@dimen/journey_planner_item_height" android:layout_marginBottom="@dimen/layout_padding">
        <Button android:id="@id/btnSingle" android:background="@drawable/btn_segmented_left" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/NOODLES_TEXT_RETURNTYPE_SINGLE" android:layout_weight="1.0" style="@style/field_button_item" />
        <Button android:id="@id/btnFixedReturn" android:background="@drawable/btn_segmented_middle" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/NOODLES_TEXT_RETURNTYPE_RETURN" android:layout_weight="1.0" style="@style/field_button_item" />
        <Button android:id="@id/btnReturn" android:background="@drawable/btn_segmented_right" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/NOODLES_TEXT_OPEN_RETURN" android:layout_weight="1.0" style="@style/field_button_item" />
    </LinearLayout>
    <LinearLayout android:id="@id/layoutOutbound" android:layout_width="fill_parent" android:layout_height="@dimen/journey_planner_item_height" android:layout_marginBottom="@dimen/layout_padding">
        <TextView android:textColor="@color/dark_text_color" android:gravity="center" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Out" android:layout_weight="0.7" />
        <Button android:textColor="@color/dark_text_color" android:ellipsize="marquee" android:id="@id/btnOutDate" android:background="@drawable/rounded_textbox" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.2" android:marqueeRepeatLimit="marquee_forever" />
        <Button android:id="@id/btnArrDeptOut" android:background="@drawable/btn_option_icon" android:padding="0.0dip" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/layout_padding" android:layout_marginRight="@dimen/layout_padding" android:text="@string/NOODLES_TEXT_DEPARTING" android:maxLines="1" android:layout_weight="1.5" android:marqueeRepeatLimit="marquee_forever" style="@style/field_button_item" />
        <Button android:textColor="@color/dark_text_color" android:ellipsize="marquee" android:id="@id/btnOutTime" android:background="@drawable/rounded_textbox" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0" android:marqueeRepeatLimit="marquee_forever" />
    </LinearLayout>
    <LinearLayout android:id="@id/layoutInbound" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/journey_planner_item_height">
        <TextView android:textColor="@color/dark_text_color" android:gravity="center" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="Back" android:layout_weight="0.7" />
        <Button android:textColor="@color/dark_text_color" android:id="@id/btnInDate" android:background="@drawable/rounded_textbox" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.2" />
        <Button android:id="@id/btnArrDeptIn" android:background="@drawable/btn_option_icon" android:padding="0.0dip" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/layout_padding" android:layout_marginRight="@dimen/layout_padding" android:text="@string/NOODLES_TEXT_DEPARTING" android:maxLines="1" android:layout_weight="1.5" android:marqueeRepeatLimit="marquee_forever" style="@style/field_button_item" />
        <Button android:textColor="@color/dark_text_color" android:ellipsize="marquee" android:id="@id/btnInTime" android:background="@drawable/rounded_textbox" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0" android:marqueeRepeatLimit="marquee_forever" />
    </LinearLayout>
</LinearLayout>
