<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/ListRow.Activity"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_row_padding" android:layout_marginTop="2.0dip" android:layout_alignParentRight="true" />
    <TextView android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@id/image" style="@style/ActivityText.Title" />
    <RelativeLayout android:id="@id/details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@id/image" android:layout_below="@id/title" style="@style/TextContent">
        <ImageView android:id="@id/user_image" android:layout_marginLeft="@dimen/list_row_padding" android:layout_alignParentRight="true" style="@style/MiniUserImage" />
        <RelativeLayout android:id="@id/user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2.0dip" android:layout_toLeftOf="@id/user_image">
            <TextView android:id="@id/username" android:layout_marginLeft="@dimen/standard_spacing" android:layout_alignParentRight="true" style="@style/ActivityText.Byline" />
            <TextView android:textStyle="bold" android:id="@id/name" android:layout_toLeftOf="@id/username" style="@style/ActivityText.Byline" />
        </RelativeLayout>
        <TextView android:id="@id/info" android:layout_toLeftOf="@id/user_image" android:layout_below="@id/user_name" style="@style/ActivityText.Byline" />
    </RelativeLayout>
</RelativeLayout>
