<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="false" android:drawable="@drawable/checkbox_ticked" />
    <item android:state_checked="false" android:state_pressed="false" android:drawable="@drawable/checkbox_unticked" />
    <item android:state_checked="true" android:state_pressed="true" android:drawable="@drawable/checkbox_ticked" />
    <item android:state_checked="false" android:state_pressed="true" android:drawable="@drawable/checkbox_focused" />
    <item android:state_focused="true" android:state_checked="false" android:state_pressed="false" android:drawable="@drawable/checkbox_focused" />
</selector>
